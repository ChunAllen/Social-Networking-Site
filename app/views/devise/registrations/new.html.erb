<html>
<head>

 <link rel="stylesheet" href="/css/style.css" type="text/css" media="screen"/>
      <link rel="stylesheet" href="/css/fancy.css" type="text/css" media="screen"/>
     

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
    <script type="text/javascript" src="/js/sliding.form.js"></script>

     <%= stylesheet_link_tag "site" %>
 
<style type="text/css">
      @import "/css/flora.datepick.css";
    </style>

  
    <script type="text/javascript" src="/js/jquery.datepick.js"></script>
    <script type="text/javascript">
    $(function() {
       $('#popupDatepicker').datepick();
       
    });
    </script>
</head>
<body>


<div id="whole_page"><!-- start whole page -->

      <div id="header">
            Gabillionaires
        </div>
        <div id="nav">
          
                <%= link_to_unless_current "About Us", about_path %> |
                <%= link_to_unless_current "Sign up", new_user_registration_path %> |  
                <%= link_to_unless_current "Sign in", new_user_session_path %>
        </div> 

 
      <div id="content1"><!-- start content -->
          <fieldset>
            <legend>Join Gabillionaires It's Free!</legend>

             <div id="wrapper"><!-- start of wrapper-->
                <div id="steps">
                       <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                   
                  
                        <fieldset class="step">
                         
                            <legend>Account</legend>
                            <p>
                                <label for="email">Email</label>
                                 <%= f.email_field :email, :placeholder => "info@yahoo.com" %>
                            </p>
                            <p>
                                <label for="password">Password</label>
                                  <%= f.password_field :password %>
                            </p>
                            <p>
                                <label for="repeatpassword">Repeat Password</label>
                                <%= f.password_field :password_confirmation %>
                            </p>
                        </fieldset>



                         <fieldset class="step">
                            <legend>Personal Info</legend>
                            <p>
                                <label for="firstname">First Name</label>
                                  <%= f.text_field :firstname %>
                            </p>
                            <p>
                                <label for="lastname">Last Name</label>
                                  <%= f.text_field :lastname %>
                            </p>
                             <p>
                                <label for="gender">Gender</label>
                                 <%= f.select(:gender, [["Male","Male"],["Female","Female"]])%>
                            </p>
                             <p>
                                <label for="country">Country</label>
                                   <%= f.text_field :country %>
                            </p>
                            <p>
                                <label for="city">City</label>
                                   <%= f.text_field :city %>
                                  <%= f.hidden_field :status, :value => "Single"%>                           
                            </p>
                             <p>
                                <label for="birthdate">Birth Date</label>
                                   <%= f.text_field :birthdate , :id => "popupDatepicker"%>
                            </p>
                        </fieldset>

                        <fieldset class="step">
                            <legend>Confirm</legend>
                            <br/>
                            <br/>
                            <br/>
                            <p>
                              Everything in the form was correctly filled. 
                              In this last step the user can confirm the submission of
                              the form.
                            </p>
                            <p class="submit">
                                <button id="registerButton" type="submit">Sign Up</button>

                            </p>
                        </fieldset>

                       <% end %>
                    </div>

                    <div id="navigation" style="display:none;"><!--start navigation-->
                       <ul>
                          <li class="selected">
                              <a href="#">Account</a>
                          </li>
                         
                           <li>
                              <a href="#">Personal Info</a>
                          </li>

                           <li>
                              <a href="#">Confirm</a>
                          </li>
                        </ul>
                     </div><!-- end of navigation -->
                     
            </div>    <!--end of wrapper -->
                   
         
     
          </fieldset>
      </div> <!-- end content -->

</div> <!-- end whole page -->

       
            
                 


</body>
</html>
